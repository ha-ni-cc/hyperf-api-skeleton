{
    "name": "hanicc/hyperf-api",
    "type": "project",
    "description": "api project",
    "license": "Apache-2.0",
    "require": {
        "hanicc/hyperf-common": "*",
        "ext-json": "*",
        "ext-redis": "*"
    },
    "require-dev": {
        "hyperf/ide-helper": "2.2.*",
        "hyperf/watcher": "2.2.*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "./test/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": [],
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.test', '.env');\""
        ],
        "post-autoload-dump": [
            "rm -rf runtime/container"
        ],
        "start": "php ./bin/hyperf.php start"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "repositories": {
        "packagist": {
            "type": "composer",
            "url": "https://mirrors.aliyun.com/composer/"
        },
        "hyperf-common": {
            "type": "git",
            "url": "https://gitee.com/hanicc/hyperf-common.git"
        }
    }
}
